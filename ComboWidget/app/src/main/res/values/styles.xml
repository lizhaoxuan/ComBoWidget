<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_tag_6</item>
        <item name="colorPrimaryDark">@color/red_tag_4</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white_tag_1</item>
    </style>

    <!-- Base application theme. -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/red_tag_6</item>
        <item name="colorPrimaryDark">@color/red_tag_4</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/blue_tag_1</item>
    </style>

    <style name="AnimationFade">
        <!-- PopupWindow左右弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/out_top_to_down</item>
        <item name="android:windowExitAnimation">@anim/in_down_to_top</item>
    </style>

</resources>
